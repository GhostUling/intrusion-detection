<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace命名空间: 要和mapper层的mapper包一样-->
<mapper namespace="com.ding.spring_001.mapper.ImageMapper">

    <select id="selectAll" resultType="com.ding.spring_001.entity.Image">
        select * from Image

    </select>
    <select id="findById" resultType="com.ding.spring_001.entity.Image" parameterType="com.ding.spring_001.entity.Image">
        select * from Image
        <where>
            <if test="userid != null">
                AND userid = #{image.userid}
            </if>
        </where>
    </select>
</mapper>