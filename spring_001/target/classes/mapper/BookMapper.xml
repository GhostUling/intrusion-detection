<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace命名空间: 要和mapper层的mapper包一样-->
<mapper namespace="com.ding.spring_001.mapper.BookMapper">

    <select id="selectAll" resultType="com.ding.spring_001.entity.Book">
        select * from book

    </select>
    <select id="findBySearch" resultType="com.ding.spring_001.entity.Book">
        select * from book
        <where>
            <if test="params != null and params.name!=null and params.name!='' ">
                and name like concat('%',#{params.name},'%')
            </if>
            <if test="params != null and params.author!=null and params.author!='' ">
                and author like concat('%',#{params.author},'%')
            </if>
        </where>
    </select>
</mapper>